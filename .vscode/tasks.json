{
  "tasks": [
    {
      "args": ["."],
      "command": "pydoclint",
      "group": {
        "isDefault": true,
        "kind": "none"
      },
      "label": "pydoclint",
      "presentation": {
        "reveal": "never"
      },
      "problemMatcher": {
        "fileLocation": ["relative", "${workspaceFolder}"],
        "owner": "pydoclint",
        "pattern": {
          "code": 3,
          "file": 1,
          "line": 2,
          "message": 4,
          "regexp": "^(.*?):(\\d+):\\s(.*?):\\s(.*)$"
        }
      },
      "type": "shell"
    }
  ],
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0"
}
